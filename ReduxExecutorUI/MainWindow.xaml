<Window x:Class="ReduxExecutorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="Redux Executor" Height="450" Width="800" Background="#080808" WindowStyle="None" AllowsTransparency="True">

    <Window.Resources>
        <!-- Rounded Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#100117" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Topbar -->
        <StackPanel Orientation="Horizontal" Background="#100117" Height="30" VerticalAlignment="Top">
            <TextBlock Text="Redux Executor" Foreground="White" FontSize="14" Margin="10" VerticalAlignment="Center"/>
            <Button Content="—" Width="30" Height="30" Click="Minimize_Click" HorizontalAlignment="Right"/>
            <Button Content="X" Width="30" Height="30" Click="Close_Click" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Margin="10,50,10,10">
            <!-- Script Hub Section -->
            <StackPanel HorizontalAlignment="Left" Width="300">
                <TextBlock Text="Script Hub" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
                <ListBox x:Name="ScriptList" Background="#100117" Foreground="White" Height="200" Margin="0,0,0,10"/>
                <Button Content="Add Script" Width="150" Click="AddScript_Click"/>
            </StackPanel>

            <!-- Script Editor with Syntax Highlighting -->
            <StackPanel HorizontalAlignment="Right" Width="450">
                <TextBlock Text="Lua Script Editor" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
                <avalonedit:TextEditor x:Name="ScriptEditor"
                                       Background="#0D0D0D"
                                       Foreground="White"
                                       ShowLineNumbers="True"
                                       SyntaxHighlighting="Lua"
                                       Height="200"
                                       Margin="0,0,0,10" />
                <Button Content="Execute" Width="150" HorizontalAlignment="Right" Click="Execute_Click"/>
            </StackPanel>

            <!-- Inject Button -->
            <Button Content="Inject" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Height="40" Margin="0,0,10,10" Click="Inject_Click"/>
        </Grid>
    </Grid>
</Window>
